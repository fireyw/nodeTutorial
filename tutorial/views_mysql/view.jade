// =는 변수값을 출력 한다고 뜻함
doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/topic') Sever Side JavaScript
        ul
           each topic in topics
                li

                    a(href='/topic/'+topic.id)=topic.title
        article
        if topic
            h2=topic.title
            =topic.des
            div='by '+ topic.author
        else
            h2 Welcome
            | This is server side javascript
        ul
           li
                a(href='/topic/add') add
            if topic
               li
                    a(href='/topic/'+ topic.id+'/edit') edit
               li
                    a(href='/topic/' + topic.id+ '/delete') delete