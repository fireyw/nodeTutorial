doctype html
html
    head
        meta(charset='utf-8')
    body
        h1
            a(href='/topic') edit
        ul
            each topic in topics
                li
                    - id=topic.id
                    a(href='/topic/' + id)=topic.title
        article
            h1= 'delete? ' + topic.title
                - id=topic.id
            form(action='/topic/'+id+'/delete', method='post')
                input(type='submit' value="yes")
            a(href='/topic/'+ id) no
